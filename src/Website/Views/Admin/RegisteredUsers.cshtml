@model IEnumerable<ZM.Mvc.RavenDbUsers.Models.ApplicationUser>

@{
    ViewBag.Title = "Manage Registered Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create New User", "CreateUser")
</p>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">
        @ViewBag.StatusMessage
    </div>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @foreach (var appUser in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => appUser.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appUser.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => appUser.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = appUser.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = appUser.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = appUser.Id })
                </td>
            </tr>
        }
    </table>
}
